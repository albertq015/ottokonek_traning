<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/partQtyMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_amount_min" />

    <EditText
        android:id="@+id/partQtyQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@color/white"
        android:digits="1234567890"
        android:ems="5"
        android:hint="0"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="3"
        android:minEms="2"
        android:padding="4dp"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/partQtyMinus"
        app:layout_constraintStart_toEndOf="@+id/partQtyMinus"
        app:layout_constraintTop_toTopOf="@+id/partQtyMinus"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/partQtyPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/partQtyQuantity"
        app:layout_constraintStart_toEndOf="@+id/partQtyQuantity"
        app:layout_constraintTop_toTopOf="@+id/partQtyQuantity"
        app:srcCompat="@drawable/button_amount_plus" />
</androidx.constraintlayout.widget.ConstraintLayout>