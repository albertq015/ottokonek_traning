<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.dm7.barcodescanner.zxing.ZXingScannerView
        android:id="@+id/cam_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:borderColor="@android:color/transparent"
        app:maskColor="@android:color/transparent" />

    <com.otto.mart.ui.component.ScannerFinderView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@+id/backhitbox"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/arrow_left_white" />
            </LinearLayout>

            <TextView
                android:id="@+id/qrscan_title"
                style="@style/TextView14spbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:text="@string/text_transfer_balance"
                android:textColor="@color/colorWhite" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp">


        </FrameLayout>

        <TextView
            android:id="@+id/qrscan_info"
            style="@style/TextView12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="328dp"
            android:gravity="center"
            android:text="@string/message_scan_qr_to_transfer"
            android:textColor="@color/colorWhite" />
    </FrameLayout>
</FrameLayout>