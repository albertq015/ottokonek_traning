<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingRight="@dimen/margin"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/margin"
        android:background="@color/very_light_pink"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_store_name"
            style="@style/TextView12spbold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            tools:text="Indoeskrim"
            android:textColor="@color/charcoal_grey" />

        <TextView
            android:id="@+id/tv_store_desc"
            style="@style/TextView12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            tools:text="Minimum Order 500rb"
            android:textColor="@color/faded_red_old" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_name"
        style="@style/TextView12spbold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/margin"
        android:layout_gravity="center"
        tools:text="title"
        android:textColor="@color/charcoal_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingRight="@dimen/margin"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/margin"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_minus"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:src="@drawable/cart_minus"/>

        <EditText
            android:id="@+id/et_qty"
            style="@style/TextView12spbold"
            android:layout_width="40dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Desc"
            android:text="0"
            android:inputType="number"
            android:background="@color/transparent"
            android:textColor="@color/charcoal_grey"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/img_plus"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:src="@drawable/cart_plus"/>

        <TextView
            android:id="@+id/tv_price"
            style="@style/TextView12spbold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            tools:text="Rp 12.000,-"
            android:textColor="@color/charcoal_grey" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_desc"
        style="@style/TextView12spbold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/margin"
        android:layout_gravity="center"
        tools:text="Desc"
        android:textColor="@color/charcoal_grey" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/very_light_pink" />

</LinearLayout>