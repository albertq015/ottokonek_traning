<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        style="@style/TextView12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_input_nominal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="24dp"
        android:layout_weight="100"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_minus" />

        <faranjit.currency.edittext.CurrencyEditText
            android:id="@+id/guk"
            style="@style/TextView18spbold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:background="@drawable/border_edittext"
            android:gravity="center"
            android:inputType="number"
            android:maxLines="1"
            android:padding="8dp"
            android:text="0"
            android:textColor="@color/ocean_blue" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:src="@drawable/icon_plus" />

    </LinearLayout>

    <com.otto.mart.ui.component.GridRadioButtton
        android:id="@+id/rgrow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TableRow android:layout_marginBottom="32dp">

            <RadioButton
                style="@style/TextView12spbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/ocean_blue"
                android:text="100.000  "
                android:textColor="@color/charcoal_grey" />

            <RadioButton
                style="@style/TextView12spbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/ocean_blue"
                android:text=" 300.000 "
                android:textColor="@color/charcoal_grey"
                tools:ignore="HardcodedText" />
        </TableRow>


        <TableRow>

            <RadioButton
                style="@style/TextView12spbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/ocean_blue"
                android:text="500.000"
                android:textColor="@color/charcoal_grey" />

            <RadioButton
                style="@style/TextView12spbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/ocean_blue"
                android:text="1.000.000"
                android:textColor="@color/charcoal_grey" />
        </TableRow>
    </com.otto.mart.ui.component.GridRadioButtton>


    <TextView
        android:id="@+id/action"
        style="@style/TextView16spbold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_blue"
        android:paddingBottom="8dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="8dp"
        android:text="@string/button_nexts"
        android:textColor="@color/color_white" />
</LinearLayout>