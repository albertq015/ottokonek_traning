<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/DialogBottomStyle">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_add_link_account"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#212A31"/>

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_are_you_sure_want_to_add_this_link_account"
        android:textSize="14sp"
        android:textColor="#212A31"/>
    

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_no"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button_white_border_green"
                android:text="No"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_weight="1"
                android:textColor="#006841" />


            <Button
                android:id="@+id/btn_yes"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/margin_10"
                android:background="@drawable/button_primary_rounded_selector"
                android:text="Yes"
                android:textAllCaps="false"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textColor="@color/white" />
        </LinearLayout>


</LinearLayout>