<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.otto.mart.ui.fragment.dashboard.MoreMenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:background="@drawable/border_gray_small_rounded"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_large"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView14spbold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_blue"
                    android:text="@string/label_payment_amount"/>

                <TextView
                    android:id="@+id/tvTotalPayment"
                    style="@style/TextView14spbold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_blue"
                    android:gravity="right"
                    tools:text="Rp25.000"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView10sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_blue"
                    android:text="@string/text_point_usage"/>

                <TextView
                    android:id="@+id/tvPoint"
                    style="@style/TextView10sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_brown"
                    android:gravity="right"
                    tools:text="Sisa Point 50.000"/>

            </LinearLayout>

            <EditText
                android:id="@+id/etPoint"
                style="@style/TextView14spbold"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_grey_rounded_bg"
                android:textSize="28sp"
                android:gravity="center"
                android:inputType="number"
                android:hint="0"
                android:textColor="@color/dark_grey_blue"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView10sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_blue"
                    android:text="@string/text_oc_usage"/>

                <TextView
                    android:id="@+id/tvTotalBalance"
                    style="@style/TextView10sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_brown"
                    android:gravity="right"
                    tools:text="OttoCash Rp100.000"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvBalance"
                style="@style/TextView14spbold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/text_black"
                android:textSize="30sp"
                tools:text="Rp25.000"/>


        </LinearLayout>


        <Button
            android:id="@+id/btnSelect"
            style="@style/TextView14spbold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:background="@drawable/button_blue_rounded_bg"
            android:stateListAnimator="@null"
            android:textAllCaps="true"
            android:text="@string/button_terapkan"/>

    </LinearLayout>

</FrameLayout>