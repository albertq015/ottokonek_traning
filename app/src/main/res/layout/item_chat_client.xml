<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/date_cunt"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/datetv"
            style="@style/TextView10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Date"
            android:textColor="@color/charcoal_grey"
            emojicon:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="88dp"
        android:background="@drawable/chat_self"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
            android:id="@+id/chatitem_text"
            style="@style/TextView10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="4dp"
            android:text="@string/hipsum_1"
            android:textColor="@color/color_white"
            emojicon:emojiconSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chatitem_timestamp"
                style="@style/TextView8sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="12:00"
                android:textColor="@color/color_white"
                emojicon:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/chatitem_checker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/icon_ceklist" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>