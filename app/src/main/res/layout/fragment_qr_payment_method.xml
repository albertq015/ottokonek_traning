<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.otto.mart.ui.fragment.dashboard.MoreMenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:background="@drawable/border_gray_small_rounded"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_large">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/btnSelect"
            style="@style/TextView14spbold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:background="@drawable/button_blue_rounded_bg"
            android:stateListAnimator="@null"
            android:text="@string/button_nexts"/>

    </LinearLayout>

</FrameLayout>