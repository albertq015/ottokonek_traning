<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wonderkiln.camerakit.CameraView
        android:id="@+id/cameraview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        app:ckJpegQuality="40"
        app:ckFacing="back" />

    <FrameLayout
        android:id="@+id/layout_bgholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@+id/backhitbox"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/arrow_left_white" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextView14spbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:text="@string/label_upload_ktp_photo"
                android:textColor="@color/colorWhite" />

        </FrameLayout>

        <TextView
            android:id="@+id/qrscan_info"
            style="@style/TextView12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="72dp"
            android:gravity="center_horizontal"
            android:text="@string/message_caputure_image"
            android:textColor="@color/colorWhite" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <FrameLayout
                android:id="@+id/layout_cambtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/circle_gradiennt" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_camera" />
            </FrameLayout>

            <ImageView
                android:id="@+id/imgv_swtchcam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_margin="50dp"
                android:src="@drawable/icon_camera_flip" />
        </FrameLayout>


    </FrameLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/layout_bgholder_ava"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scrim_userktp_ava">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@id/backhitbox"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/arrow_left_white" />
            </LinearLayout>

            <TextView
                android:id="@id/tv_title"
                style="@style/TextView14spbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:text="@string/label_upload_ktp_photo"
                android:textColor="@color/colorWhite" />

        </FrameLayout>

        <TextView
            android:id="@id/qrscan_info"
            style="@style/TextView12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="72dp"
            android:gravity="center_horizontal"
            android:text="@string/message_caputure_image"
            android:textColor="@color/colorWhite" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">


            <TextView
                android:id="@+id/action"
                style="@style/TextView14spbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="40dp"
                android:background="@drawable/button_yellow"
                android:paddingBottom="10dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="10dp"
                android:text="@string/button_next_photo"
                android:textColor="@color/color_white" />


        </FrameLayout>


    </FrameLayout>


</FrameLayout>