<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <TextView
            style="@style/TextView14spbold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/label_bank_account_info"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="@string/label_account_holder_name"
            android:textColor="#526A7A"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tvAccountHolderName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="@string/label_account_holder_name"
            android:textColor="#212A31"
            android:textStyle="bold"
            android:textSize="14sp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="@string/label_bank_account_number"
            android:textColor="#526A7A"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tvBankAccountNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="@string/label_account_holder_name"
            android:textColor="#212A31"
            android:textStyle="bold"
            android:textSize="14sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="Bank Account Name"
            android:textColor="#526A7A"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tvBankAccountName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="@string/label_account_holder_name"
            android:textColor="#212A31"
            android:textStyle="bold"
            android:textSize="14sp" />
    </LinearLayout>

    <Button

        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_primary_rounded_selector"
        android:stateListAnimator="@null"
        android:text="@string/button_continue"
        android:textAllCaps="false"
        android:layout_margin="30dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white" />
</RelativeLayout>