<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/DialogBottomStyle">

    <ImageView
        android:id="@+id/view_back"
        android:layout_width="@dimen/img_icon_small"
        android:layout_height="@dimen/img_icon_small"
        android:padding="4dp"
        android:src="@drawable/vector_cross"
        android:tint="@color/dark_grey_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="8dp"
        style="@style/DialogContent">

        <ImageView
            android:layout_width="138dp"
            android:layout_height="138dp"
            android:src="@drawable/vector_circle_with_star"/>

        <TextView
            style="@style/Text"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            android:textAlignment="gravity"
            android:textColor="@color/dark_sky_blue"
            android:textStyle="bold"
            android:textSize="@dimen/text_medium"
            android:text="@string/empty_string"/>

        <TextView
            style="@style/Text"
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:textAlignment="gravity"
            android:textSize="@dimen/text_small_two"
            android:textStyle="normal"
            android:textColor="@color/blue_dark_two"
            android:text="@string/empty_string"/>

        <Button
            style="@style/ButtonBlueSoftRound"
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAllCaps="true"
            android:text="@string/button_ok"/>
    </LinearLayout>
</LinearLayout>