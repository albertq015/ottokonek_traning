<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.wallet.PayWalletActivity">

    <include layout="@layout/toolbar" />

    <RadioGroup
        android:id="@+id/rgFragmentSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbScan"
            style="@style/TextView12sp"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/bg_line_indicator"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/text_scan_qr"
            android:textColor="@color/color_tab_selection" />

        <RadioButton
            android:id="@+id/rbShow"
            style="@style/TextView12sp"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/bg_line_indicator"
            android:button="@null"
            android:gravity="center"
            android:text="@string/text_pay_code"
            android:textColor="@color/color_tab_selection" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>