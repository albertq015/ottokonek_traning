<?xml version="1.0" encoding="utf-8"?>
<com.otto.mart.ui.component.CheckableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_gey_line">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/product_name"
                style="@style/TextView10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="114dp"
                android:maxLines="2"
                android:text="Product name extended for 2 lines"
                android:textColor="@color/color_white"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/product_price"
                style="@style/TextView12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:maxWidth="125dp"
                android:lines="2"
                android:maxLines="2"
                android:gravity="center"
                android:text="Product price" />

            <TextView
                android:id="@+id/product_discount_price"
                style="@style/TextView14spbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:maxLines="1"
                android:text="Product price"
                android:textColor="@color/ocean_blue" />

        </LinearLayout>

        <ImageView
            android:id="@+id/product_imgv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/circle_red"
            android:minWidth="66dp"
            android:minHeight="66dp"
            android:visibility="gone" />
    </androidx.cardview.widget.CardView>
</com.otto.mart.ui.component.CheckableLayout>