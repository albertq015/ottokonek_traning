<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_popup_qr"
        app:civ_border_color="@color/colorYellow"
        app:civ_border_width="3dp"
        app:civ_circle_background_color="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/pool_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/s_name"
            style="@style/TextView14spbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="namennamen"
            android:textColor="@color/ocean_blue" />

        <TextView
            android:id="@+id/b_name"
            style="@style/TextView12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="namennamen"
            android:textColor="@color/charcoal_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p_name"
                style="@style/TextView12spbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                tools:text="makjangtuktotblungkok"
                android:textColor="@color/charcoal_grey" />

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white_two" />

            <TextView
                android:id="@+id/anchor1"
                style="@style/TextView12splight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                tools:text="M.ID"
                android:textColor="@color/charcoal_grey" />

            <TextView
                android:id="@+id/s_id"
                style="@style/TextView12spbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:maxLines="1"
                tools:text="924834193854415"
                android:textColor="@color/charcoal_grey"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
