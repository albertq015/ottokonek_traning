<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingTop="@dimen/margin_small"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin"
        android:src="@drawable/ic_ottopay_logo"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView5">
        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_super_small"
            android:layout_marginRight="@dimen/margin_super_small"
            android:layout_marginLeft="@dimen/margin_super_small"
            android:textColor="@color/dark_grey_blue"
            android:textSize="14sp"
            style="@style/FontOpenSansSemiBold"
            android:layout_gravity="center_vertical"
            tools:text="2X Tepung terigu"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_margin="@dimen/margin_super_small"
            android:layout_below="@+id/productName">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FontOpenSansReguler"
                android:textSize="14sp"
                android:id="@+id/productPrice"
                android:textColor="@color/brown_grey"
                tools:text="2X Tepung terigu"/>
            <TextView
                android:id="@+id/productSubtotal"
                style="@style/FontOpenSansBold"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/margin_super_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue_green"
                tools:text="Rp. 20.000"
                android:layout_centerHorizontal="true"
                />
        </LinearLayout>





    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/very_light_grey"/>


</RelativeLayout>