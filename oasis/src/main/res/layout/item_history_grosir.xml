<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/card"
    android:background="@drawable/shadow_custom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_order_status"
            android:layout_alignParentLeft="true"
            style="@style/TextView10sp"
            android:layout_centerVertical="true"
            android:textColor="@color/blue_grey"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#d3f2ff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_super_small"
                android:id="@+id/status"
                android:hint="@string/dash"
                android:layout_alignParentLeft="true"
                style="@style/TextView10sp"
                android:textColor="@color/blue_grey"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/grey_soft"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_order_numb"
                android:layout_alignParentLeft="true"
                style="@style/TextView10sp"
                android:textColor="@color/blue_grey"/>

            <TextView
                android:id="@+id/no_pemesanan"
                style="@style/TextView10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:hint="@string/dash"
                android:textColor="@color/blue_grey" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_order_date"
                android:layout_alignParentLeft="true"
                style="@style/TextView10sp"
                android:textColor="@color/blue_grey"/>

            <TextView
                android:id="@+id/tanggal_pemesanan"
                style="@style/TextView10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:hint="@string/dash"
                android:textColor="@color/blue_grey" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_total_payment"
                android:layout_alignParentLeft="true"
                style="@style/TextView10sp"
                android:textColor="@color/blue_grey"/>

            <TextView
                android:id="@+id/total_pembayaran"
                style="@style/TextView10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:hint="@string/dash"
                android:textColor="@color/blue_grey" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="15dp"
            android:background="@color/grey_soft"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_payment_status"
                android:layout_alignParentLeft="true"
                style="@style/TextView10sp"
                android:textColor="@color/blue_grey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/dash"
                android:id="@+id/status_pembayaran"
                android:layout_alignParentRight="true"
                style="@style/TextView10sp"
                android:textColor="@color/faded_red"/>
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>